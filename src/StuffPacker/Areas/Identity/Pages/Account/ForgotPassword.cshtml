@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}
    <header class="masthead">
        <div class="container h-100">
            <div class="row h-100 align-items-center justify-content-center text-center">
                <div class="col-lg-10 align-self-end">
                    <h1 class="text-uppercase text-white font-weight-bold">Forgot Password</h1>
                    <hr class="divider my-4">
                </div>
                <div class="col-lg-8 align-self-baseline">
                    <form method="post">
                        <p class="text-white-75 font-weight-light mb-5">
                            <h4 style="color:white;">Enter your email.</h4>
                            <div class="container">
                                <div class="row">
                                    <div class="col-lg-4" style="color:white;">
                                       &nbsp;
                                    </div>
                                    <div class="col-lg-4">
                                        <input asp-for="Input.Email" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div asp-validation-summary="All" class="text-danger"></div>     
                            <br /><br />
                            <a class="btn btn-dark btn-xl" href="/">Cancel</a>
                            <button class="btn btn-primary btn-xl js-scroll-trigger" type="submit">Send email</button>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </header>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
