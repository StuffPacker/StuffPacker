@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}
    <header class="masthead">
        <div class="container h-100">
            <div class="row h-100 align-items-center justify-content-center text-center">
                <div class="col-lg-10 align-self-end">
                    <h1 class="text-uppercase text-white font-weight-bold">@ViewData["Title"]</h1>
                    <hr class="divider my-4">
                </div>
                <div class="col-lg-8 align-self-baseline">
                    <form method="post">
                        <p class="text-white-75 font-weight-light mb-5">
                            <input asp-for="Input.Code" type="hidden" />
                            <div class="container">
                                <div class="row">
                                    <div class="col-lg-4" style="color:white;">
                                        <b><label asp-for="Input.Email"></label></b>
                                    </div>
                                    <div class="col-lg-4">
                                        <input asp-for="Input.Email" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row" style="padding-top:5px; padding-bottom:5px;">
                                    <div class="col-lg-4" style="color:white;">
                                        <b><label asp-for="Input.Password"></label></b>
                                    </div>
                                    <div class="col-lg-4">
                                        <input asp-for="Input.Password" />
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row" style="padding-top:5px; padding-bottom:5px;">
                                    <div class="col-lg-4" style="color:white;">
                                        <b> <label asp-for="Input.ConfirmPassword"></label></b>
                                    </div>
                                    <div class="col-lg-4">
                                        <input asp-for="Input.ConfirmPassword" />
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div asp-validation-summary="All" class="text-danger"></div>

                            <a class="btn btn-dark btn-xl" href="/">Cancel</a>
                            <button class="btn btn-primary btn-xl js-scroll-trigger" type="submit">Reset</button>

                        </p>

                    </form>
                </div>

            </div>
        </div>
    </header>












